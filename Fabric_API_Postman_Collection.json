{
	"info": {
		"_postman_id": "fabric-api-collection",
		"name": "Fabric API",
		"description": "API collection for Fabric management endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Add Fabric",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"name\": \"Cotton\",\n  \"length\": 100\n}"
				},
				"url": {
					"raw": "{{base_url}}/fabric",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"fabric"
					]
				},
				"description": "Create a new fabric with unique name and length"
			},
			"response": []
		},
		{
			"name": "Get All Fabrics",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/fabric",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"fabric"
					]
				},
				"description": "Retrieve all fabrics"
			},
			"response": []
		},
		{
			"name": "Get Fabric by Name",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/fabric/Cotton",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"fabric",
						"Cotton"
					]
				},
				"description": "Retrieve a specific fabric by name"
			},
			"response": []
		},
