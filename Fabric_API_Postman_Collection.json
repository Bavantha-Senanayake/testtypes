			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"length\": 150\n}"
				},
				"url": {
					"raw": "{{base_url}}/fabric/Cotton",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"fabric",
						"Cotton"
					]
				},
				"description": "Update fabric length or name"
			},
			"response": []
		},
		{
			"name": "Update Fabric Name",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"name\": \"Silk\",\n  \"length\": 200\n}"
				},
				"url": {
					"raw": "{{base_url}}/fabric/Cotton",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"fabric",
						"Cotton"
					]
				},
				"description": "Update both fabric name and length"
			},
			"response": []
		},
		{
			"name": "Delete Fabric",
			"request": {
				"method": "DELETE",
				"header": [],
				"url": {
					"raw": "{{base_url}}/fabric/Cotton",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"fabric",
						"Cotton"
					]
				},
				"description": "Delete a fabric by name"
			},
			"response": []
