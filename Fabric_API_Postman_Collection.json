			"name": "Get All Transactions",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/transaction",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"transaction"
					]
				},
				"description": "Retrieve all fabric issue transactions"
			},
			"response": []
