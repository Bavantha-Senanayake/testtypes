				"method": "PUT",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"type\": \"cutting\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/issued/Cotton/type",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"issued",
						"Cotton",
						"type"
					]
				},
				"description": "Assign type (cutting or sewing) to issued fabric"
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:3000",
			"type": "string"
		},
		{
			"key": "api_gateway_url",
			"value": "https://your-api-id.execute-api.us-east-1.amazonaws.com/prod",
			"type": "string"
		}
	]
